{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "module": "ESNext",
    "plugins": [{
      "name": "typescript-styled-plugin"
    }],
    "importHelpers": true,
    "resolveJsonModule": true,
  }
}
